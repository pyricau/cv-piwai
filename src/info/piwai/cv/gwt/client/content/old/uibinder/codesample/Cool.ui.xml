<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.cool { 
			font-weight: bolder; 
		}
	</ui:style>
	
	<g:HTMLPanel>
	
		<div ui:field="coolDiv" class="{style.cool}">Cool text</div>
		
		<g:ScrollPanel>
			<g:Button ui:field="button" styleName="{style.cool}" />
		</g:ScrollPanel>
		
	</g:HTMLPanel>
	
</ui:UiBinder> 